<?xml version="1.0"?>

<odoo>
    <!-- Tree-->
    <record id="property_tag_tree" model="ir.ui.view">
        <field name="name">property.tag.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            
            <tree string="tree" editable="top">
                <field name = "name" />
            </tree>
        
        </field>
    </record>

    <!-- Form-->
    <record id="property_tag_form" model="ir.ui.view">
        <field name="name">property.tag.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <group>
                        <field name = "name" />
                    </group>
                   
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="estate_property_tags" model="ir.actions.act_window">

        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    
    </record>
</odoo>